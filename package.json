{
    "name": "type-vein",
    "version": "0.2.0-dev",
    "description": "Strictly typed data framework for consuming HTTP services",
    "author": "Magna Marek",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/kukeiko/type-vein"
    },
    "typings": "./dist/src/index.d.ts",
    "main": "./dist/src/index",
    "scripts": {
        "build": "rimraf dist && tsc",
        "build:watch": "tsc -w",
        "test": "karma start --single-run",
        "test:watch": "karma start",
        "test:debug": "karma start",
        "npmprepublish": "npm run build && npm run test",
        "lint": "tslint --project .",
        "commit": "git-cz"
    },
    "peerDependencies": {},
    "devDependencies": {
        "@types/jasmine": "3.5.0",
        "commitizen": "^4.0.3",
        "cz-emoji": "^1.2.0",
        "istanbul-instrumenter-loader": "3.0.1",
        "jasmine-core": "3.5.0",
        "karma": "4.4.1",
        "karma-chrome-launcher": "3.1.0",
        "karma-coverage-istanbul-reporter": "2.1.1",
        "karma-jasmine": "2.0.1",
        "karma-mocha-reporter": "2.2.5",
        "karma-sourcemap-loader": "0.3.7",
        "karma-webpack": "4.0.2",
        "puppeteer": "2.0.0",
        "rimraf": "3.0.0",
        "ts-loader": "6.2.1",
        "tslint": "5.20.1",
        "typescript": "3.7.3",
        "webpack": "4.41.4"
    },
    "config": {
        "cz-emoji": {
            "types":[
              {
                "name": "feat \t\t🌟  A new feature",
                "value": ":star2:"
              },
              {
                "name": "fix \t\t🐞  A bug fix",
                "value": ":beetle:"
              },
              {
                "name": "test \t\t✔️ Testing improved with new or fixed tests",
                "value": ":white_check_mark:"
              },
              {
                "name": "chore \t🔩  Doesn't modify src or test files",
                "value": ":nut_and_bolt:"
              },
              {
                "name": "style \t✏️  Doesn't affect the meaning of the code (white-space, semi-colons, etc)",
                "value": ":pencil2:"
              },
              {
                "name": "docs \t\t📚  Documentation change",
                "value": ":pencil:"
              },
              {
                "name": "refactor \t🎨  Neither fixes a bug nor adds a feature",
                "value": ":art:"
              },
              {
                "name": "perf \t\t⚡  Improves performance with this change",
                "value": ":zap:"
              },
              {
                "name": "build \t🚀  Build system config or external dependencies ($compile)",
                "value": ":rocket:"
              },
              {
                "name": "ci \t\t👷  CI config files and scripts ($arch)",
                "value": ":construction_worker:"
              },
              {
                "name": "revert \t💊  Reverts a previous commit",
                "value": ":pill:"
              }
            ],
            "scopes": [
              "core",
              "query",
              "compile",
              "arch",
              "odata",
              "graphQL"
            ]
        },
        "commitizen": {
            "path": "cz-emoji"
        }
    }
}
