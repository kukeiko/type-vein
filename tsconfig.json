{
    "compilerOptions": {
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strict": true,
        "lib": [
            "dom",
            "scripthost",
            "es2015",
            "es2016.array.include"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts"
    ]
}